{
  "name": "template-workspace-simple",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "format": "prettier --write --cache .",
    "lint": "prettier --check --cache .",
    "test": "vitest",
    "type-check": "tsc --build --pretty",
    "typescript:run": "tsx --conditions quilt:source",
    "typescript:watch": "tsx watch --conditions quilt:source"
  },
  "devDependencies": {
    "@quilted/rollup": "^0.2.0",
    "@quilted/vite": "^0.1.0",
    "@quilted/typescript": "^0.2.0",
    "rollup": "^4.1.0",
    "prettier": "^3.0.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.0",
    "vite": "^4.5.0",
    "vitest": "^0.34.0"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
