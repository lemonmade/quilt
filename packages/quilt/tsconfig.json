{
  "extends": "../../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build/ts",
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@quilted/react-server-render": ["../../react-server-render/src"],
      "@quilted/react-server-render/server": [
        "../../react-server-render/src/server"
      ],
      "@quilted/react-html": ["../../react-html/src"],
      "@quilted/react-html/server": ["../../react-html/src/server"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [
    {"path": "../react-html"},
    {"path": "../react-router"},
    {"path": "../react-server-render"}
  ]
}
