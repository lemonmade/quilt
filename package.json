{
  "name": "quilt",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/lemonmade/quilt.git",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "node ./scripts/sewing-kit-from-source test",
    "lint": "node ./scripts/sewing-kit-from-source lint",
    "type-check": "node ./scripts/sewing-kit-from-source type-check",
    "build": "node ./scripts/sewing-kit-from-source build",
    "prerelease": "yarn build",
    "version-bump": "lerna version",
    "deploy": "lerna publish from-package --yes --no-verify-access"
  },
  "devDependencies": {
    "@quilted/craft": "^0.0.0",
    "lerna": "3.22.1",
    "p-limit": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "terser": "^5.5.1",
    "typescript": "^4.1.0"
  },
  "prettier": "./packages/prettier",
  "eslintConfig": {
    "extends": "./packages/eslint/workspace",
    "ignorePatterns": [
      "sewing-kit-from-source.js",
      "packages/*/*.d.ts",
      "packages/*/*.js",
      "!packages/*/.eslintrc.js",
      "packages/*/*.mjs",
      "packages/*/*.node",
      "packages/*/*.esnext",
      "!packages/eslint/*.js",
      "!packages/prettier/*.js"
    ]
  }
}
