{
  "name": "quilt",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/lemonmade/quilt.git",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "create": "tsx --conditions quilt:source ./packages/create/source/cli.ts",
    "test": "vitest",
    "test.unit": "vitest --config configuration/vite.unit.config.ts",
    "test.e2e": "vitest --config configuration/vite.e2e.config.ts",
    "lint.eslint": "eslint . --cache --cache-location ./node_modules/.eslintcache --ext .ts,.tsx,.js,.mjs --max-warnings 0",
    "lint.prettier": "prettier \"./**/*.{json,md,yaml,css,graphql}\" --check --cache",
    "lint": "pnpm run lint.eslint && pnpm run lint.prettier",
    "type-check": "tsc --build --pretty",
    "build": "pnpm --recursive --filter rollup run build && pnpm --recursive --filter !rollup run build",
    "version-bump": "changeset version && pnpm install --no-frozen-lockfile",
    "deploy": "pnpm publish -r",
    "deploy.preview": "changeset version --snapshot preview && changeset publish --tag preview --no-git-tag",
    "deploy.snapshot": "changeset version --snapshot snapshot && changeset publish --tag snapshot --no-git-tag",
    "typescript.run": "tsx --conditions quilt:source",
    "typescript.watch": "tsx watch --conditions quilt:source"
  },
  "packageManager": "pnpm@8.10.0+sha256.3c5d70d07b0c4849d7e07398b62bf48ca6619ca86f77981125eaab7f5ee82c4c",
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.0",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.0",
    "@quilted/browserslist-config": "workspace:^",
    "@quilted/craft": "workspace:^",
    "@quilted/eslint-config": "workspace:^",
    "@quilted/events": "workspace:^",
    "@quilted/performance": "workspace:^",
    "@quilted/prettier": "workspace:^",
    "@quilted/quilt": "workspace:^",
    "@quilted/rollup": "workspace:^",
    "@quilted/stylelint-config": "workspace:^",
    "@quilted/typescript": "workspace:^",
    "@types/common-tags": "^1.8.1",
    "@types/node": "^18.17.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "common-tags": "^1.8.2",
    "esbuild": "^0.19.0",
    "execa": "^6.1.0",
    "jsdom": "^22.1.0",
    "preact": "~10.17.0",
    "react": "workspace:@quilted/react@^18.2.0",
    "react-dom": "workspace:@quilted/react-dom@^18.2.0",
    "rollup": "^4.1.0",
    "source-map-support": "^0.5.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.6"
  },
  "prettier": "@quilted/prettier",
  "eslintConfig": {
    "extends": "@quilted/eslint-config/workspace",
    "ignorePatterns": [
      "tests/e2e/output",
      "packages/preact-mini-compat/configuration/rollup.config.js",
      "packages/rollup/configuration/rollup.config.js"
    ]
  },
  "stylelint": {
    "extends": "@quilted/stylelint-config"
  },
  "browserslist": [
    "extends @quilted/browserslist-config/defaults"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  }
}
